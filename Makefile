################################################################################
# Compilation output paths.
################################################################################
PREFIX=$(HOME)/QEMU_LINUX_KERNEL
ETC=$(PREFIX)/etc
BIN=$(PREFIX)/bin
LIB=$(PREFIX)/lib/ce
LIB64=$(PREFIX)/lib64/ce
INCLUDE=$(PREFIX)/include/ce

################################################################################
# QEMU Directives.
################################################################################
HD_SIZE=20M
HD_PATH=$(PREFIX)/share/hd.img
QEMU_BOOT=$(LIB)/boot.bin

